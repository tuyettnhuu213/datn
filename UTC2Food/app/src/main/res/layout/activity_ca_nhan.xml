<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/backgroundn"
    android:layout_height="match_parent"

    tools:context=".activity.CaNhanActivity">
        <TextView
            android:id="@+id/xinchaousername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="100dp"/>
    <TextView
        android:background="@color/transfer"
        android:id="@+id/edtCNusername"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
        <com.google.android.material.textfield.TextInputLayout
            android:textColorHint="@color/teal_700"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtCNTen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Họ và tên"
                android:selectAllOnFocus="false"
                android:singleLine="true" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:textColorHint="@color/teal_700"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtCNSDT"
                android:inputType="number"
                android:maxLength="10"
                android:hint="Số điện thoại"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:textColorHint="@color/teal_700"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:hint="Số phòng"
                android:inputType="number"
                android:maxLength="3"
                android:id="@+id/edtCNDiaChi"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text="Xác nhận"
                android:id="@+id/btnCNXacNhan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/hinhvuong"
                android:padding="20dp"
                android:textSize="16dp"
                android:textStyle="bold"
                app:backgroundTint="@color/teal_700"/>
            <Button
                android:text="Trở về"
                android:id="@+id/btnCNTroVe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/hinhvuong"
                android:padding="20dp"
                android:textSize="16dp"
                android:textStyle="bold"
                app:backgroundTint="@color/teal_700"/>
        </LinearLayout>

    </LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_height="match_parent"
    tools:context=".activity.DoiMatKhauActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb"
        android:background="@color/transfer"
        app:titleTextColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></androidx.appcompat.widget.Toolbar>
    <com.google.android.material.textfield.TextInputLayout
        android:textColorHint="@color/teal_700"
        android:layout_width="match_parent"
        app:passwordToggleEnabled="true"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:hint="Nhập mật khẩu cũ"
            android:inputType="textPassword"
            android:id="@+id/edtpasswordold"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:textColorHint="@color/teal_700"
        android:layout_width="match_parent"
        app:passwordToggleEnabled="true"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:hint="Nhập mật khẩu mới"
            android:inputType="textPassword"
            android:id="@+id/edtpasswordnew"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:textColorHint="@color/teal_700"
        android:layout_width="match_parent"
        app:passwordToggleEnabled="true"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:hint="Nhập lại mật khẩu mới"
            android:id="@+id/edtpasswordnew2"
            android:inputType="textPassword"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="Xác nhận"
            android:id="@+id/btnXacNhanMK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/hinhvuong"
            android:padding="20dp"
            android:textSize="16dp"
            android:textStyle="bold"
            app:backgroundTint="@color/teal_700"/>
        <Button
            android:text="Trở về"
            android:id="@+id/btnTroVeMK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/hinhvuong"
            android:padding="20dp"
            android:textSize="16dp"
            android:textStyle="bold"
            app:backgroundTint="@color/teal_700"/>
    </LinearLayout>

</LinearLayout>
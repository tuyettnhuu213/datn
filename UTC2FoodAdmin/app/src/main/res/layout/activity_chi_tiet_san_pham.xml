<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".activity.ChiTietSanPhamActivity">
    <ImageView
        android:id="@+id/imvCTSP"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/ic_launcher" />

    <EditText
        android:id="@+id/txtTenCTSP"
        android:hint="Tên"
        android:layout_margin="2dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="Giá"
            android:textColor="#F44336"
            android:textSize="15dp"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/txtGiaCTSP"
            android:hint="18000"
            android:inputType="number"
            android:textColor="#F44336"
            android:textSize="15dp"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Spinner
        android:id="@+id/spinnerTinhTrangCTSP"
        android:hint="Còn hàng"
        android:layout_margin="2dp"
        android:textColor="#FFC107"
        android:textSize="15dp"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Spinner
        android:layout_margin="2dp"
        android:id="@+id/spinnerLoaiCTSP"
        android:hint="Đồng giá 22k"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnLuuCTSP"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:backgroundTint="@color/pink"
            android:textColor="@color/white"
            app:backgroundTint="@color/pink"
            android:text="lưu" />
        <Button
            android:id="@+id/btnHuyCTSP"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            app:backgroundTint="@color/pink"
            android:text="hủy" />
    </LinearLayout>

</LinearLayout>
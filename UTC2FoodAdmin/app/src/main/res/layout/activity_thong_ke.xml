<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.ThongKeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_height="wrap_content">
        <Button
            android:onClick="AddFragment"
            android:layout_width="0dp"
            android:drawableTop="@drawable/revenue"
            android:id="@+id/btnDoanhThu"
            android:layout_weight="1"
            android:text="doanh thu"
            android:layout_height="wrap_content"/>
        <Button
            android:onClick="AddFragment"
            android:layout_width="0dp"
            android:text="khách hàng"
            android:layout_weight="1"
            android:drawableTop="@drawable/customerfeedback"
            android:id="@+id/btnKhachHang"
            android:layout_height="wrap_content"/>
        <Button
            android:onClick="AddFragment"
            android:layout_width="0dp"
            android:drawableTop="@drawable/dish"
            android:id="@+id/btnSanPham"
            android:text="món ăn"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fragmentThongKe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</LinearLayout>
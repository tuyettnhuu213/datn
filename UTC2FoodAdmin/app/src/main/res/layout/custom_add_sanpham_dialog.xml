<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@drawable/custom_edt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".activity.ChiTietLoaiSanPhamActivity">
    <ImageView
        android:id="@+id/imvDialogSP"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/ic_launcher" />
    <EditText
        android:id="@+id/txtTenSPDiaLog"
        android:hint="Tên"
        android:layout_margin="2dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
            android:id="@+id/txtGiaSPDiaLog"
            android:inputType="number"
            android:text="0"
            android:textColor="#F44336"
            android:textSize="15dp"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/spinnerTinhTrangDiaLog"
            android:hint="Còn hàng"
            android:layout_margin="2dp"
            android:textColor="#FFC107"
            android:textSize="15dp"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <Spinner
        android:layout_margin="2dp"
        android:id="@+id/spinnerLoaiDiaLog"
        android:hint="Đồng giá 22k"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnDialogLuuSP"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:backgroundTint="@color/pink"
            android:textColor="@color/white"
            app:backgroundTint="@color/pink"
            android:text="lưu" />
        <Button
            android:id="@+id/btnDiaLogHuySP"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            app:backgroundTint="@color/pink"
            android:text="hủy" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChiTietLoaiSanPhamActivity">

    <ImageView
        android:id="@+id/imvLoaiSPCT"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/ic_launcher" />

    <EditText
        android:id="@+id/txtTenLoaiSPCT"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:hint="Tên loại sản phẩm"/>

    <Button
        android:id="@+id/btnLuuCT"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        app:backgroundTint="#2E2525"
        android:text="lưu" />
    <Button
        android:id="@+id/btnHuyCT"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        app:backgroundTint="#2E2525"
        android:text="hủy" />
</LinearLayout>